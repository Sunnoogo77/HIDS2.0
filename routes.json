{
    "auth": [
      {
        "method": "POST",
        "path": "/auth/login",
        "description": "Connexion (renvoie JWT)",
        "body": {
          "email": "string",
          "password": "string"
        }
      },
      {
        "method": "POST",
        "path": "/auth/logout",
        "description": "Déconnexion (invalidate token)",
        "body": null
      }
    ],
  
    "users": [
      {
        "method": "GET",
        "path": "/users",
        "description": "Lister tous les utilisateurs (admin only)",
        "query": null
      },
      {
        "method": "GET",
        "path": "/users/{userId}",
        "description": "Détails d’un utilisateur",
        "pathParams": {
          "userId": "string"
        }
      },
      {
        "method": "POST",
        "path": "/users",
        "description": "Créer un utilisateur (admin)",
        "body": {
          "email": "string",
          "password": "string",
          "role": "admin | user"
        }
      },
      {
        "method": "PUT",
        "path": "/users/{userId}",
        "description": "Modifier rôle ou statut (admin)",
        "pathParams": {
          "userId": "string"
        },
        "body": {
          "role?": "string",
          "status?": "active | inactive"
        }
      },
      {
        "method": "PUT",
        "path": "/users/{userId}/password",
        "description": "Changer mot de passe",
        "pathParams": {
          "userId": "string"
        },
        "body": {
          "new_password": "string"
        }
      },
      {
        "method": "DELETE",
        "path": "/users/{userId}",
        "description": "Supprimer un utilisateur (admin)",
        "pathParams": {
          "userId": "string"
        }
      }
    ],
  
    "status": [
      {
        "method": "GET",
        "path": "/status",
        "description": "État global du HIDS Engine et des sous-moteurs",
        "response": {
          "engine": "running | stopped",
          "file": "active | paused",
          "folder": "active | paused",
          "ip": "active | paused"
        }
      }
    ],
  
    "metrics": [
      {
        "method": "GET",
        "path": "/metrics/entities",
        "description": "Nombre total d’éléments surveillés"
      },
      {
        "method": "GET",
        "path": "/metrics/alerts/active",
        "description": "Nombre d’alertes actives"
      },
      {
        "method": "GET",
        "path": "/metrics/alerts/latest",
        "description": "Détails de la dernière alerte"
      },
      {
        "method": "GET",
        "path": "/metrics/scans/next",
        "description": "Délai ou timestamp du prochain scan"
      }
    ],
  
    "activity": [
      {
        "method": "GET",
        "path": "/activity",
        "description": "Flux d’événements récents",
        "query": {
          "limit?": "number",
          "since?": "ISO8601 timestamp"
        }
      }
    ],
  
    "alerts": [
      {
        "method": "GET",
        "path": "/alerts/by-type",
        "description": "Données pour histogramme “Alerts by Type”",
        "query": {
          "from?": "ISO8601",
          "to?": "ISO8601"
        }
      },
      {
        "method": "GET",
        "path": "/alerts/over-time",
        "description": "Série temporelle des alertes",
        "query": {
          "from?": "ISO8601",
          "to?": "ISO8601",
          "interval?": "hour | day"
        }
      },
      {
        "method": "GET",
        "path": "/alerts",
        "description": "Lister et filtrer les alertes",
        "query": {
          "from?": "ISO8601",
          "to?": "ISO8601",
          "type?": "hash | network",
          "entityType?": "file | folder | ip",
          "severity?": "low | medium | high | critical",
          "page?": "number",
          "pageSize?": "number"
        }
      },
      {
        "method": "GET",
        "path": "/alerts/{alertId}",
        "description": "Détails d’une alerte",
        "pathParams": {
          "alertId": "string"
        }
      }
    ],
  
    "logs": [
      {
        "method": "GET",
        "path": "/logs",
        "description": "Lister et filtrer tous les logs",
        "query": {
          "from?": "ISO8601",
          "to?": "ISO8601",
          "source?": "hash | network",
          "page?": "number",
          "pageSize?": "number"
        }
      },
      {
        "method": "GET",
        "path": "/logs/export",
        "description": "Exporter logs filtrés (CSV/JSON)",
        "query": {
          "same as /logs": "…"
        }
      }
    ],
  
    "monitoring": [
      {
        "method": "GET",
        "path": "/monitoring/files",
        "description": "Lister fichiers surveillés"
      },
      {
        "method": "POST",
        "path": "/monitoring/files",
        "description": "Ajouter un fichier à surveiller",
        "body": {
          "path": "string",
          "frequency": "number"
        }
      },
      {
        "method": "PUT",
        "path": "/monitoring/files/{fileId}",
        "description": "Mettre à jour un fichier",
        "pathParams": {
          "fileId": "string"
        },
        "body": {
          "frequency?": "number",
          "status?": "active | paused"
        }
      },
      {
        "method": "DELETE",
        "path": "/monitoring/files/{fileId}",
        "description": "Supprimer un fichier surveillé"
      },
      {
        "method": "GET",
        "path": "/monitoring/ips",
        "description": "Lister IPs surveillées"
      },
      {
        "method": "POST",
        "path": "/monitoring/ips",
        "description": "Ajouter une IP à surveiller",
        "body": {
          "ip": "string",
          "hostname?": "string",
          "frequency": "number"
        }
      },
      {
        "method": "PUT",
        "path": "/monitoring/ips/{ipId}",
        "description": "Mettre à jour une IP",
        "pathParams": {
          "ipId": "string"
        },
        "body": {
          "frequency?": "number",
          "status?": "active | paused"
        }
      },
      {
        "method": "DELETE",
        "path": "/monitoring/ips/{ipId}",
        "description": "Supprimer une IP surveillée"
      }
    ],
  
    "reports": [
      {
        "method": "POST",
        "path": "/reports",
        "description": "Générer un rapport",
        "body": {
          "type": "summary | detailed",
          "from": "ISO8601",
          "to": "ISO8601"
        }
      },
      {
        "method": "GET",
        "path": "/reports",
        "description": "Lister rapports existants",
        "query": {
          "page?": "number",
          "pageSize?": "number"
        }
      },
      {
        "method": "GET",
        "path": "/reports/{reportId}/download",
        "description": "Télécharger un rapport",
        "pathParams": {
          "reportId": "string"
        }
      }
    ],
  
    "integrations": [
      {
        "method": "GET",
        "path": "/integrations",
        "description": "Voir clés API et webhooks"
      },
      {
        "method": "PUT",
        "path": "/integrations/virustotal",
        "description": "Enregistrer clé VirusTotal",
        "body": {
          "apiKey": "string"
        }
      }
    ],
  
    "webhooks": [
      {
        "method": "POST",
        "path": "/webhooks",
        "description": "Ajouter un webhook",
        "body": {
          "url": "string",
          "active": "boolean"
        }
      },
      {
        "method": "PUT",
        "path": "/webhooks/{webhookId}",
        "description": "Modifier un webhook",
        "pathParams": {
          "webhookId": "string"
        },
        "body": {
          "url?": "string",
          "active?": "boolean"
        }
      },
      {
        "method": "DELETE",
        "path": "/webhooks/{webhookId}",
        "description": "Supprimer un webhook"
      }
    ],
  
    "config": [
      {
        "method": "GET",
        "path": "/config/access",
        "description": "Voir restrictions admin-only"
      },
      {
        "method": "PUT",
        "path": "/config/access",
        "description": "Mettre à jour toggles d’accès",
        "body": {
          "reportsAdminOnly": "boolean",
          "settingsAdminOnly": "boolean"
        }
      },
      {
        "method": "GET",
        "path": "/updates",
        "description": "Version actuelle de l’app"
      },
      {
        "method": "POST",
        "path": "/updates/check",
        "description": "Forcer recherche de nouvelle version"
      }
    ]
  }
  